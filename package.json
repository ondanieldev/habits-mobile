{
  "name": "rabbits",
  "version": "0.0.1",
  "description": "Rabbits is a simple app that aims to help people to improve their routine by managing habits, reminders and events.",
  "private": true,
  "author": {
    "email": "me@ondaniel.com.br",
    "name": "Daniel Nascimento",
    "url": "https://ondaniel.com.br"
  },
  "scripts": {
    "assets:android:dir": "mkdir ./android/app/src/main/assets/",
    "assets:android:index": "touch ./android/app/src/main/assets/index.android",
    "bundle:android": "react-native bundle --dev false --platform android --entry-file index.js --bundle-output ./android/app/src/main/assets/index.android --assets-dest ./android/app/src/main/res/",
    "build:android:debug": "cd ./android && ./gradlew assembleDebug && cd ..",
    "build:android:release": "cd ./android && ./gradlew assembleRelease && cd ..",
    "clean:android": "cd ./android && ./gradlew clean && cd ..",
    "start:android": "react-native run-android",
    "start:ios": "react-native run-ios",
    "start:metro": "react-native start",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --fix \"{src,test}/**/*.{js,ts,jsx,tsx}\"",
    "fix:prettier": "prettier --write \"{src,test}/**/*.{js,ts,jsx,tsx}\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"{src,test}/**/*.{js,ts,jsx,tsx}\"",
    "lint:prettier": "prettier --check \"{src,test}/**/*.{js,ts,jsx,tsx}\"",
    "test": "jest"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@notifee/react-native": "^7.8.2",
    "@react-native-community/datetimepicker": "^7.7.0",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "@reduxjs/toolkit": "^2.2.3",
    "axios": "^1.6.8",
    "date-fns": "^3.6.0",
    "i18next": "^23.11.2",
    "react": "18.2.0",
    "react-hook-form": "^7.51.3",
    "react-i18next": "^14.1.0",
    "react-native": "0.73.6",
    "react-native-dotenv": "^3.4.11",
    "react-native-localize": "^3.1.0",
    "react-native-mmkv": "^2.12.2",
    "react-native-progress": "^5.0.1",
    "react-native-safe-area-context": "^4.9.0",
    "react-native-screens": "^3.30.1",
    "react-native-svg": "^15.1.0",
    "react-native-uuid": "^2.0.2",
    "react-native-vector-icons": "^10.0.3",
    "react-redux": "^9.1.1",
    "zod": "^3.23.0-beta.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.73.21",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.5",
    "@react-native/typescript-config": "0.73.1",
    "@types/react": "^18.2.6",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
